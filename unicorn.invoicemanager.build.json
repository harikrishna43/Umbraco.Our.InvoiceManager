{
  "tasks": {
    "postBuild": [
      {
        "alias": "zip",
        "destination": "releases/github/{packageName}.v{version}.zip",
        "files": [
          {
            "source": "src/{packageName}/bin/Release/net60/",
            "destination": "bin/",
            "patterns": [
              "{packageName}.dll",
              "{packageName}.xml",
              "PuppeteerSharp.dll",
              "PuppeteerSharp.xml"
            ]
          },
          {
            "source": "src/{packageName}/App_Plugins/InvoiceManager",
            "destination": "App_Plugins/InvoiceManager/",
            "patterns": [
              "**/*.js",
              "**/*.css",
              "**/*.html",
              "**/*.xml",
              "package.manifest"
            ]
          }
        ]
      },
      {
        "alias": "umbraco",
        "destination": "releases/umbraco/{packageName}.v{version}.zip",
        "info": {
          "name": "{packageName}",
          "version": "{version}",
          "url": "{projectUrl}",
          "license": "{license}",
          "licenseUrl": "{licenseUrl}",
          "readme": "{description}",
          "requirements": "9.3.0",
          "author": {
            "name": "{company}",
            "url": "https://www.harikrishnaparmar.co.in/"
          },
          "contributors": [
            "Harikrishna Parmar"
          ],
          "actions": [
            {
              "runat": "install",
              "alias": "AddSkybrudRedirectsModule"
            }
          ]
        },
        "files": [
          {
            "source": "src/{packageName}/bin/Release/net60",
            "destination": "bin/",
            "patterns": [
              "PuppeteerSharp.dll",
              "PuppeteerSharp.xml",
              "{packageName}.dll",
              "{packageName}.xml"
            ]
          },
          {
            "source": "src/{packageName}/App_Plugins/InvoiceManager",
            "destination": "App_Plugins/InvoiceManager/",
            "patterns": [
              "**/*.js",
              "**/*.css",
              "**/*.html",
              "**/*.xml",
              "package.manifest"
            ]
          },
          {
            "source": "src/{packageName}/wwwroot/InvoiceManager/",
            "destination": "wwwroot/InvoiceManager/",
            "patterns": [
              "**/*.js",
              "**/*.css",
              "**/*.html",
              "**/*.xml"
            ]
          }
        ]
      }
    ]
  }
}