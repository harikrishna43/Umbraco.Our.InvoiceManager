<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <InvoiceManagerContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\Invoice_Manager\**\*.*</InvoiceManagerContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyInvoiceManagerAssets" BeforeTargets="Build">
        <ItemGroup>
            <InvoiceManagerContentFiles Include="$(InvoiceManagerContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying Invoice_Manager files: $(InvoiceManagerContentFilesPath) - #@(InvoiceManagerContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(InvoiceManagerContentFiles)"
            DestinationFiles="@(InvoiceManagerContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\Invoice_Manager\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

    </Target>

    <Target Name="ClearInvoiceManagerAssets" BeforeTargets="Clean">
        <ItemGroup>
            <InvoiceManagerDir Include="$(MSBuildProjectDirectory)\App_Plugins\Invoice_Manager\" />
        </ItemGroup>
        <Message Text="Clear old Invoice_Manager data"  Importance="high" />
        <RemoveDir Directories="@(InvoiceManagerDir)"  />
    </Target>

</Project>
