<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<ContentTargetFolders>.</ContentTargetFolders>
		<Product>InvoiceManager</Product>
		<PackageId>InvoiceManager_V1</PackageId>
		<Title>Invoice Manager</Title>
		<Description>Create invoice in umbraco 9</Description>
		<Product>Umbraco 9 Package</Product>
		<PackageTags>umbraco plugin package</PackageTags>
		<RootNamespace>Unicorn.Umbraco.InvoiceManager</RootNamespace>
	</PropertyGroup>
	<PropertyGroup>
		<Version>1.0.0</Version>
		<Authors>Harikrishna Parmar</Authors>
		<Company>Unicorn - Madnat Technologies</Company>
		<Description>Invoice manager for Umbraco 9.</Description>
		<Copyright>Copyright Â© 2022</Copyright>
	</PropertyGroup>

	<!-- Information for the NuGet package -->
	<PropertyGroup>
		<PackageId>Unicorn.Umbraco.InvoiceManager</PackageId>
		<PackageTags>Umbraco, Invoice,Customer, Unicorn, Madnat Technologies</PackageTags>
		<PackageProjectUrl>https://github.com/harikrishna43/Unicorn.Umbraco.InvoiceManager</PackageProjectUrl>
		<PackageIcon></PackageIcon>
		<RepositoryType>git</RepositoryType>
		<RepositoryUrl>https://github.com/harikrishna43/Unicorn.Umbraco.InvoiceManager</RepositoryUrl>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<PackageLicenseExpression>Commercial</PackageLicenseExpression>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
	</PropertyGroup>

	<!-- Include NuGet dependencies -->
	<ItemGroup>
		<PackageReference Include="PuppeteerSharp" Version="7.0.0" />
		<PackageReference Include="Umbraco.Cms.Web.Website" Version="9.3.1" />
		<PackageReference Include="Umbraco.Cms.Web.BackOffice" Version="9.3.1" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="App_Plugins\Unicorn.Umbraco.InvoiceManager\**\*.*">
			<ExcludeFromSingleFile>true</ExcludeFromSingleFile>
			<CopyToPublishDirectory>Always</CopyToPublishDirectory>
		</Content>
		<None Include="build\**\*.*">
			<Pack>True</Pack>
			<PackagePath>build</PackagePath>
		</None>
	</ItemGroup>
	<ItemGroup>
		<None Include="build\**\*.*">
			<Pack>True</Pack>
			<PackagePath>build</PackagePath>
		</None>
	</ItemGroup>
	<ItemGroup>
	  <Content Remove="build/InvoiceManager.targets" />
	</ItemGroup>
	<ItemGroup>
	  <Content Remove="build/InvoiceManager.targets" />
	</ItemGroup>
	<!-- Include the targets file -->
	<ItemGroup>
		<Content Include="build/$(AssemblyName).targets" PackagePath="build\$(AssemblyName).targets" />
	</ItemGroup>
	<ItemGroup>
		<None Remove="App_Plugins\Unicorn.Umbraco.InvoiceManager\Customers\Customers.html" />
		<None Remove="App_Plugins\Unicorn.Umbraco.InvoiceManager\Dashboards\info.html" />
		<None Remove="App_Plugins\Unicorn.Umbraco.InvoiceManager\Dialogs\Customer.html" />
		<None Remove="App_Plugins\Unicorn.Umbraco.InvoiceManager\Dialogs\Invoice.html" />
		<None Remove="App_Plugins\Unicorn.Umbraco.InvoiceManager\Dialogs\InvoiceDetails.html" />
		<None Remove="App_Plugins\Unicorn.Umbraco.InvoiceManager\Editors\CustomerDropdownlist.html" />
		<None Remove="App_Plugins\Unicorn.Umbraco.InvoiceManager\Editors\InvoiceCalculation.html" />
		<None Remove="App_Plugins\Unicorn.Umbraco.InvoiceManager\Editors\RadioGroup.html" />
		<None Remove="App_Plugins\Unicorn.Umbraco.InvoiceManager\Index.html" />
		<None Remove="App_Plugins\Unicorn.Umbraco.InvoiceManager\Invoice\Invoice.html" />
		<None Remove="App_Plugins\Unicorn.Umbraco.InvoiceManager\js\Dialogs\CustomerDialog.js" />
		<None Remove="App_Plugins\Unicorn.Umbraco.InvoiceManager\js\Dialogs\InvoiceDetailDialog.js" />
		<None Remove="App_Plugins\Unicorn.Umbraco.InvoiceManager\js\Dialogs\InvoiceDialog.js" />
		<None Remove="App_Plugins\Unicorn.Umbraco.InvoiceManager\js\Editors\CustomerDropdownlist.js" />
		<None Remove="App_Plugins\Unicorn.Umbraco.InvoiceManager\js\Editors\InvoiceCalculation.Controller.js" />
		<None Remove="App_Plugins\Unicorn.Umbraco.InvoiceManager\js\Editors\RadioGroup.js" />
		<None Remove="App_Plugins\Unicorn.Umbraco.InvoiceManager\js\Services\CustomerService.js" />
		<None Remove="App_Plugins\Unicorn.Umbraco.InvoiceManager\js\Services\InvoiceService.js" />
		<None Remove="App_Plugins\Unicorn.Umbraco.InvoiceManager\lang\en-US.xml" />
	</ItemGroup>
</Project>
