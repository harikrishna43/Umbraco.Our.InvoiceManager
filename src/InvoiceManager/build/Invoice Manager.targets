<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <InvoiceManagerContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\InvoiceManager\**\*.*</InvoiceManagerContentFilesPath>
    </PropertyGroup>
	<PropertyGroup>
		<InvoiceManagerwwwrootpath>$(MSBuildThisFileDirectory)..\wwwroot\InvoiceManager\**\*.*</InvoiceManagerwwwrootpath>
	</PropertyGroup>

    <Target Name="CopyInvoiceManagerAssets" BeforeTargets="Build">
        <ItemGroup>
            <InvoiceManagerContentFiles Include="$(InvoiceManagerContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying Invoice_Manager files: $(InvoiceManagerContentFilesPath) - #@(InvoiceManagerContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(InvoiceManagerContentFiles)"
            DestinationFiles="@(InvoiceManagerContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\InvoiceManager\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

    </Target>
	<Target Name="CopyInvoiceManagerwwwroot" BeforeTargets="Build">
		<ItemGroup>
			<InvoiceManagerwwwrootFiles Include="$(InvoiceManagerwwwrootpath)" />
		</ItemGroup>
		<Message Text="Copying Invoice_Manager files: $(InvoiceManagerwwwrootpath) - #@(InvoiceManagerwwwrootFiles->Count()) files"  Importance="high" />
		<Copy
            SourceFiles="@(InvoiceManagerwwwrootFiles)"
            DestinationFiles="@(InvoiceManagerwwwrootFiles->'$(MSBuildProjectDirectory)\wwwroor\InvoiceManager\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

	</Target>
	
    <Target Name="ClearInvoiceManagerAssets" BeforeTargets="Clean">
        <ItemGroup>
            <InvoiceManagerDir Include="$(MSBuildProjectDirectory)\App_Plugins\InvoiceManager\" />
        </ItemGroup>
        <Message Text="Clear old Invoice_Manager data"  Importance="high" />
        <RemoveDir Directories="@(InvoiceManagerDir)"  />
    </Target>

</Project>
